border_right=0
border_bottom=4

[updates]
command=$HOME/.scripts/updates.sh
interval=60
signal=3
urgent=true

[volume-pulseaudio]
command=$HOME/.scripts/volume-pulseaudio 
interval=once
signal=1
markup=pango
border=#cc241d

[brightness]
label=    
command=printf "%.0f " $(xbacklight -get)
interval=10
signal=2
border=#d79921

[temperature]
label=   
command=echo "$($HOME/.scripts/temperature.sh 'Core 0') $($HOME/.scripts/temperature.sh 'Core 1') "
interval=5
border=#b16286

[email]
label= 
command=$HOME/.scripts/email
interval=300
min_width= 99

[wireless]
label=    
command=[[ -z "$(iwgetid -r)" ]] || echo "$(iwgetid -r) "
interval=2
border=#98971a

[battery]
command=$HOME/.scripts/battery.sh
interval=persist
border=#458588

[time]
label=    
command=echo "`date +'%a %d %b'` <b>`date +'%T'`</b> "; [[ -z "${BLOCK_BUTTON}" ]] || gsimplecal &
interval=1
markup=pango
border=#928374
separator_block_width=0

